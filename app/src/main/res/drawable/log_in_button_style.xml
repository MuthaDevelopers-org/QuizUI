<?xml version="1.0" encoding="utf-8"?>
<layer-list android:color="@color/colorWhite" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
           <gradient
               android:startColor="@color/colorBackground"
               android:angle="270"
               android:endColor="@color/colorNextButton"/>
            <corners
                android:topLeftRadius="@dimen/_7sdp"
                android:topRightRadius="@dimen/_7sdp"/>
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackground" />
            <corners
                android:topLeftRadius="@dimen/_7sdp"
                android:topRightRadius="@dimen/_7sdp"/>
        </shape>
    </item>
</layer-list>