<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="100dp"/>
            <solid android:color="@color/colorPBBackground"/>
            <stroke android:color="@color/colorPBBorder" android:width="5dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="5dp"
        android:bottom="5dp"
        android:right="5dp"
        android:left="5dp">
        <clip>
            <scale android:scaleWidth="100%" >
                <shape>
                    <corners android:radius="100dp"/>
                    <gradient
                        android:angle="0"
                        android:endColor="@color/colorPBGradPrimary"
                        android:startColor="@color/colorPBGradSecondary"
                        />
                </shape>
            </scale>
        </clip>
    </item>
</layer-list>
