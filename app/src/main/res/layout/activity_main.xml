<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quizui.MainActivity"
    android:paddingHorizontal="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_gradient"
            android:progress="70"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ps_bold"
            android:text="70's"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/_7sdp"
            android:paddingStart="@dimen/_1sdp"
            android:src="@drawable/timer" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null"
        android:scrollbarThumbHorizontal="@null"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps_bold"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_20ssp"
                android:text="Question1/100"/>
            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@drawable/dotted_underline"
                android:layerType="software"/>
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:fontFamily="@font/pd_regular"
                android:textSize="@dimen/_16ssp"
                android:text="  Morbi vitae malesuada leo.?"/>

            <LinearLayout
                android:id="@+id/rootLayoutForOptions"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_40sdp"
                        android:background="@drawable/textview_border"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/pd_regular"
                        android:text="Option-A"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/colorWhite"/>
                    <RadioButton
                        android:id="@+id/radiobutton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/radio_button_color_scheme"
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_border"
                        android:fontFamily="@font/pd_regular"
                        android:gravity="start|center_vertical"
                        android:minHeight="@dimen/_40sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:text="Option-A"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14ssp" />

                    <RadioButton
                        android:id="@+id/radiobutton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/radio_button_color_scheme"
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_40sdp"
                        android:background="@drawable/textview_border"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/pd_regular"
                        android:text="Option-A"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/colorWhite"/>
                    <RadioButton
                        android:id="@+id/radiobutton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/radio_button_color_scheme"
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_40sdp"
                        android:background="@drawable/textview_border"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/pd_regular"
                        android:text="Option-A"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/colorWhite"/>
                    <RadioButton
                        android:id="@+id/radiobutton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/radio_button_color_scheme"
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="10dp" />

                </RelativeLayout>

                <Button
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="7dp"
                    android:textAllCaps="false"
                    android:layout_marginVertical="@dimen/_27sdp"
                    android:textColor="@color/colorNextButton"
                    android:background="@drawable/next_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_regular"
                    android:text="Next ->"
                    android:textSize="@dimen/_20sdp"
                    android:layout_gravity="center_vertical|center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>